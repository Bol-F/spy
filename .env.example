# =========================================
# üß† TELEGRAM BOT CONFIGURATION
# =========================================
# Telegram bot token (get it from @BotFather)
TELEGRAM_TOKEN=your_bot_token_here

# Telegram chat ID (use @userinfobot to get your ID)
TELEGRAM_CHAT_ID=your_chat_id_here


# =========================================
# ‚öôÔ∏è MONITORING SETTINGS
# =========================================
# Time (in seconds) between saving collected data to file
SAVE_INTERVAL=300

# Time (in minutes) between daily summary reports
DAILY_INTERVAL=5

# Maximum number of items to keep in memory buffer before sending
MAX_BUFFER_SIZE=1000

# Maximum number of retries for failed operations (network, etc.)
MAX_RETRIES=3

# Comma-separated list of process names to ignore
IGNORE_PROCS=explorer.exe,taskmgr.exe,chrome.exe,firefox.exe


# =========================================
# üîê SECURITY & PERFORMANCE (Optional)
# =========================================
# Enable encryption for saved data (True/False)
ENCRYPT_LOGS=True

# How many days to keep old logs before deleting
RETENTION_DAYS=7

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
